{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-indent": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off",
        "jsx-quotes": "off",
        "indent": "off",
        "no-console": "off",
        "max-len": "off",
        "no-underscore-dangle": "off"
        // "avoidEscape": true
    }
}